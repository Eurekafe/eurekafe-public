  section.container-fluid.px-0
    div.row.px-0.mx-0
      div.col.carousel.slide.px-0#carousel(data-ride="carousel")
        ol.carousel-indicators
          li.ts(data-target="#carousel" data-slide-to="0" class="active")
          li.ts(data-target="#carousel" data-slide-to="1")
          li.ts(data-target="#carousel" data-slide-to="2")
        div.carousel-inner
          article.carousel-item.center.croc.active(style="background-image: url(" + require('./img/draw-evt-new.png') + ");")
            div.bottom-text: p.h2.font-weight-bold Bienvenue à l'Eurêkafé !
          article.carousel-item.cover(style="background-image:url(" + require('./img/lancement-sv.jpg') + ");")
            div.top-text
              p.display-2.text-center.dark Lancement du crowdfunding
            div.mid-text
              button.btn.dark(onclick="window.open('https://www.gofundme.com/eurekafe', '_blank')"): p.h2.m-0 Participez!
          article.carousel-item.center.croc(style="background-image:url(" + require('./img/draw-atelier.jpg') + ");")
          
        a.carousel-control-prev.carousel-control-color(href="#carousel" role="button" data-slide="prev")
          i.fa.fa-2x.fa-chevron-left(aria-hidden="true")
          span.sr-only Previous
        a.carousel-control-next.carousel-control-color(href="#carousel" role="button" data-slide="next")
          i.fa.fa-2x.fa-chevron-right(aria-hidden="true")
          span.sr-only Next

